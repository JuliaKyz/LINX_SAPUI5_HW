
<c:FragmentDefinition
xmlns="sap.m"
xmlns:c="sap.ui.core"
>
	<Dialog class='sapUiContentPadding' beforeOpen="onDialogBeforeOpen" title="Create header">
		<content>
		<VBox>
			<VBox>
				<Label text='HeaderID' labelFor="idHeaderID"/>
				<Input 
					value="{HeaderID}"
					id="idHeaderID"
				/>
			</VBox>
			<VBox>
				<Label text='{DocumentNumber' labelFor="idDocumentNumber"/>
				<Input 
				value="{DocumentNumber}"
				id="idDocumentNumber"
				/>
			</VBox>
			<VBox>
				<Label text='PlantID' labelFor="idPlantID"/>
				<Input 
				value="{PlantID}"
				id="idPlantID"
				/>
			<!--</VBox>-->
			<!--	<VBox>-->
			<!--	<Label text='PlantText' labelFor="idPlantText"/>-->
			<!--	<Input -->
			<!--	value="{PlantText}"-->
			<!--	id="idPlantText"-->
			<!--	/>-->
			</VBox>
				<VBox>
				<Label text='Description' labelFor="idDescription"/>
				<TextArea
				rows="3"
				width="100%"
				maxLength="256"
				value="{Description}"
				id="idDescription"
				/>
			</VBox>
			
		</VBox>
		</content>
		
		<beginButton>
			<Button type="Emphasized" press = 'onPressSave' text="Save"/>
		</beginButton>
		<endButton>
			<Button type="Transparent" press = 'onPressCancel' text="Cancel"/>
		</endButton>
	</Dialog>
</c:FragmentDefinition>