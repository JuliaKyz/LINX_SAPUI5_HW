<mvc:View
	controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		showHeader="false"
	>
		
			
			
		<Table
				id="table"
				width="auto"
				growing="true"
				growingThreshold='15'
				growingScrollToLoad="true">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="({=${worklistView>/sCount}})"/>
						<ToolbarSpacer />
						<SearchField
							tooltip="{i18n>worklistSearchTooltip}"
							
							liveChange="onLiveSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
						<Column>
						<Text text="{i18n>tableDateColumnTitle}" />
					</Column>
						<Column>
						<Text text="{i18n>tablePlantColumnTitle}" />
					</Column>
						<Column>
						<Text text="{i18n>tableRegionColumnTitle}" />
					</Column>
						<Column>
						<Text text="{i18n>tableDescriptionColumnTitle}" />
					</Column>
						<Column>
						<Text text="{i18n>tableCreatedColumnTitle}" />
				</Column>
					<Column width="2%">
						<Text text="" />
				</Column width="10%">
					
				</columns>

				
			</Table>
	
	</Page>

		
</mvc:View>