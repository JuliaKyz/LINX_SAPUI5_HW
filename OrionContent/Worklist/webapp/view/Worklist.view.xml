
<mvc:View
	controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		showHeader="false"
	>
	
			<Table
				id="table"
				width="auto"
				itemPress='onItemSelect'
				growing="true"
				growingThreshold='15'
				growingScrollToLoad="true">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="({=${worklistView>/sCount}})"/>
						<SearchField
							tooltip="{i18n>worklistSearchTooltip}"
							showSearchButton='false'
							change='onSearch'
							liveChange='onLiveSearch'
							width="auto">
						</SearchField>
							<ToolbarSpacer/>
							<Button
							icon="sap-icon://add"
							type="Emphasized"
							press="onPressCreate"
							/>
							<Button
							icon="sap-icon://refresh"
							type="Transparent"
							press="onPressRefresh"
							/>
						</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="DocumentNumber">
					</Column>
						<Column>
						<Text text="DocumentDate" />
					</Column>
						<Column>
						<Text text="PlantText" />
					</Column>
						<Column>
						<Text text="RegionText" />
					</Column>
						<Column>
						<Text text="Description" />
					</Column>
						<Column>
						<Text text="Created" />
				</Column>
					<Column width="2%">
						<Text text="" />
				</Column>
					
				</columns>

				
			</Table>
	
	</Page>

		
</mvc:View>